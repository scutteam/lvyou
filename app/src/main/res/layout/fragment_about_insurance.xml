<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/about_insurance_bg"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:src="@mipmap/about_insurance_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:text="简游熊将保障你的旅游安全"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="凡使用简游熊出发旅游"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="每次均可免费获取以下的高额旅行保险"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/about_insurance_item_background"
        android:layout_gravity="center_horizontal"
        android:layout_height="90dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/default_border"
            android:text="旅游个人意外险10万"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/about_insurance_item_background"
        android:layout_gravity="center_horizontal"
        android:layout_height="90dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textColor="@color/default_border"
            android:textSize="17sp"
            android:text="旅行社责任险100万"
            />
    </LinearLayout>
    
</LinearLayout>