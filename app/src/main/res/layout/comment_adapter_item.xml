<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.scutteam.lvyou.widget.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/civ_avatar"
            android:layout_marginLeft="@dimen/layout_margin_small"
            />
        <RatingBar
            android:id="@+id/rb_score"
            style="@style/mjRatingBar"
            android:layout_toRightOf="@id/civ_avatar"
            android:layout_width="wrap_content"
            android:isIndicator="true"
            android:layout_height="24dp"
            android:paddingTop="@dimen/layout_padding_tiny"
            android:layout_marginLeft="@dimen/layout_margin_tiny"
            android:layout_gravity="center_vertical"
            android:numStars="5"
            android:rating="4"
            />
        <TextView
            android:layout_toRightOf="@id/civ_avatar"
            android:layout_width="wrap_content"
            android:layout_below="@id/rb_score"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:id="@+id/tv_name"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/layout_margin_tiny"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/tv_name"
            android:layout_below="@id/rb_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:paddingLeft="@dimen/layout_padding_large"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_padding_small"
        android:paddingRight="@dimen/layout_padding_small"
        android:id="@+id/tv_comment"
        android:textSize="14sp"
        android:paddingBottom="@dimen/layout_padding_small"
        />
</LinearLayout>