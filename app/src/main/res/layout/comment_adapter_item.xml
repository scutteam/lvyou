<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <com.scutteam.lvyou.widget.CircleImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:id="@+id/civ_avatar"
            android:layout_marginLeft="@dimen/layout_margin_small"
            />
        <RatingBar
            android:id="@+id/rb_score"
            style="@style/mjRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/civ_avatar"
            android:numStars="5"
            android:layout_marginTop="4dp"
            android:clickable="false"
            android:isIndicator="true"
            android:layout_alignTop="@+id/civ_avatar"
            />

        <TextView
            android:layout_toRightOf="@id/civ_avatar"
            android:layout_width="wrap_content"
            android:layout_below="@id/rb_score"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name"
            android:textColor="@color/captcha_selected_color"
            android:singleLine="true"
            android:textSize="12sp"
            android:maxLength="25"
            android:layout_marginLeft="@dimen/layout_margin_tiny"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/tv_name"
            android:layout_below="@id/rb_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:textColor="@color/captcha_selected_color"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/layout_padding_large"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/tv_comment"
        android:lineSpacingExtra="5dp"
        android:textSize="14sp"
        android:paddingBottom="@dimen/layout_padding_small"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dfdfdf"
        />
</LinearLayout>