<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/recommend_view_spot_detail_head_bg"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/iv_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="凤凰古城"
            android:id="@+id/tv_dest"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dest"
            android:id="@+id/tv_dest_title"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:textSize="23sp"
            android:text="历史休闲四日游"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_play_num"
            android:layout_below="@id/tv_dest_title"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:text="16个游玩项目"
            android:paddingTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/tv_select"
            android:padding="10dp"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/recommend_view_spot_button_bg"
            />
    </RelativeLayout>
</RelativeLayout>