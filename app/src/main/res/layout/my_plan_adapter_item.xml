<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_my_plan_bg">

        <TextView
            android:id="@+id/my_plan_item_left_line"
            android:layout_width="4dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/my_plan_item_left_line"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_plan_item_destion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="凤凰古城"
                android:textColor="@color/main_text_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/my_plan_item_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="华南理工大学（大学城校区）"
                android:textColor="@color/main_text_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/my_plan_item_member_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="12人成团"
                android:textColor="@color/main_text_color"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_plan_item_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:text="订单号：666666"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/my_plan_item_create_time"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="创建于:2015年8月4日"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="11dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/my_plan_item_state"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="12sp"
             />
    </RelativeLayout>
</RelativeLayout>
