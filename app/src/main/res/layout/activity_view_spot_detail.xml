<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_nav"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_arrow"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/image_color"
            />
    </RelativeLayout>
    <com.scutteam.lvyou.widget.me.maxwin.view.XListView
        android:layout_width="match_parent"
        android:id="@+id/listView"
        android:layout_weight="1"
        style="@style/listview_normal_style_with_no_divider"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="添加景点"
        android:gravity="center"
        android:id="@+id/tv_add_view_spot"
        android:textSize="16sp"
        android:clickable="true"
        android:background="@color/image_color"
        android:textColor="@color/white"
        />
</LinearLayout>