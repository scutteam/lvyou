<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:paddingBottom="12dp">
    <LinearLayout
        android:id="@+id/sdd_day"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape_mj_text_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/sdd_day_title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="选择出发日期"
            android:textSize="19sp"
            android:gravity="center"
            android:textColor="@color/image_color"
            android:clickable="true"
            android:background="#FFFFFF"
             />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="1px"
        android:layout_below="@+id/sdd_day"
        android:background="@color/captcha_selected_color"/>



    <com.scutteam.lvyou.util.calendarlistview.library.DayPickerView
        android:id="@+id/pickerView"
        android:layout_marginTop="3dp"
        app:colorSelectedDayBackground="@color/image_color"
        app:calendarHeight="230dp"
        app:enablePreviousDay="false"
        app:colorCurrentDay="#838383"
        app:colorPreviousDay="#C5C5C5"
        app:colorMonthName="#4C4C4C"
        app:colorDayName="#838383"
        app:colorNormalDay="#838383"
        app:textSizeDay = "14sp"
        app:textSizeDayName="12sp"
        app:textSizeMonth="18sp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/sdd_day"
        />

</RelativeLayout>
