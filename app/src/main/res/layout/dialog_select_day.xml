<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <LinearLayout
        android:id="@+id/sdd_day"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape_mj_text_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/sdd_day_begin"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="出发日期"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/image_color"
            android:clickable="true"
            android:background="@drawable/selector_mj_tv"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sdd_day_return"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="返程日期"
            android:textSize="16sp"
            android:textColor="@color/captcha_selected_color"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/selector_mj_tv"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="1px"
        android:layout_below="@+id/sdd_day"
        android:background="@color/captcha_selected_color"/>



    <com.scutteam.lvyou.util.calendarlistview.library.DayPickerView
        android:id="@+id/pickerView"
        android:layout_marginTop="3dp"
        app:colorSelectedDayBackground="@color/image_color"
        app:calendarHeight="200dp"
        app:enablePreviousDay="false"
        app:colorCurrentDay="#000000"
        app:colorPreviousDay="#bebebe"
        app:colorMonthName="#565656"
        app:colorDayName="#565656"
        app:colorNormalDay="#565656"
        app:textSizeDay = "16sp"
        app:textSizeDayName="13sp"
        app:textSizeMonth="22sp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/sdd_day"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="1px"
        android:layout_below="@+id/pickerView"
        android:background="@color/captcha_selected_color"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="确  定"
        android:layout_below="@+id/pickerView"
        android:gravity="center"
        android:textColor="@color/main_text_color"
        android:background="@drawable/shape_mj_text_bg"
        android:layout_marginTop="3dp"
        android:textSize="20dp"
        android:id="@+id/sdd_submit" />


</RelativeLayout>
