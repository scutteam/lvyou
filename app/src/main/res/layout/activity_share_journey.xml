<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    tools:context="com.scutteam.lvyou.activity.GetMyInsuranceActivity">

    <include
        android:id="@+id/share_journey_head"
        layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_below="@+id/share_journey_head"
        android:layout_above="@+id/share_journey_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/default_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="94dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/get_my_insurance_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/share_journey_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:gravity="bottom"
                            android:paddingLeft="4dp"
                            android:text="凤凰古城"
                            android:textColor="@color/main_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/share_journey_create_time"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingLeft="4dp"
                            android:text="创建时间: 2015-08-20-20:30"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/share_journey_order_num"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:gravity="top"
                            android:paddingLeft="4dp"
                            android:text="订单号: 00123"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/default_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.scutteam.lvyou.widget.CircleImageView
                        android:id="@+id/share_journey_image"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/get_my_insurance_icon" />

                    <TextView
                        android:id="@+id/share_journey_plan_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxHeight="50dp"
                        android:paddingLeft="10dp"
                        android:text="吹个大波波的团游"
                        android:textColor="@color/main_text_color"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="出发地点"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/share_journey_start_place"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="成团人数"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/share_journey_member_num"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="12人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="行程日期"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/share_journey_date"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="2015年8月22日－2015年9月4日" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="住宿"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                     />

                <TextView
                    android:id="@+id/share_journey_stay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="经济型酒店 120元/人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="包餐"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                     />

                <TextView
                    android:id="@+id/share_journey_meal"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="一正餐一早餐 24/人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="交通"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/share_journey_transport"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="豪华大巴 120元/人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="导游"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/share_journey_guide"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="普通导游 10元/人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="保险"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="15sp"
                     />

                <TextView
                    android:id="@+id/share_journey_insurance"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="华南理工大学（大学城校区）"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:text="旅行社责任险100万（赠送）\n个人旅行意外险10万（赠送）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mj_play_item"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="vertical"
                android:layout_below="@id/mj_stay"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:background="@drawable/selector_mj_tv"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/share_journey_play_item_count"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_horizontal|bottom"
                    android:textColor="@color/main_text_color"
                    android:text="已选择3个游玩项目"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/share_journey_play_item_state"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal|top"
                    android:textColor="@color/image_color"
                    android:text="行程状态:宽松"/>
            </LinearLayout>
            <ListView
                android:id="@+id/share_journey_play_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/mj_play_item"
                android:background="@drawable/shape_mj_text_bg"
                ></ListView>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/share_journey_share"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="分享您的行程计划"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:background="@color/image_color"/>
</RelativeLayout>