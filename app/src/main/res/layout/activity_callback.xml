<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    tools:context="com.scutteam.lvyou.activity.CallbackActivity">

    <include
        android:id="@+id/callback_head"
        layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/callback_image"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/callback_head"
        android:scaleType="centerCrop"
        android:src="@drawable/tupian43" />


    <LinearLayout
        android:id="@+id/callback_ll_top"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/callback_image"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/callback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left|center_vertical"
            android:text="凤凰古城"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/callback_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="订单号: 666666"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/callback_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="创建于: 2015年8月3日"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/callback_ll_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_below="@+id/callback_ll_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="导游评价"
                android:textSize="17sp"
                android:gravity="center_vertical|left"
                />
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/callback_guide_star"
                style="@style/callbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="10dip"
                android:numStars="5"
                android:rating="3"
                android:layout_gravity="center_vertical"
                android:clickable="true" />
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="包餐服务"
                android:textSize="17sp"
                android:gravity="center_vertical|left"                />
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/callback_meal_star"
                style="@style/callbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="10dip"
                android:numStars="5"
                android:rating="3"
                android:layout_gravity="center_vertical"
                android:clickable="true" />
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="酒店住宿"
                android:textSize="17sp"
                android:gravity="center_vertical|left"
                />
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/callback_stay_star"
                style="@style/callbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="10dip"
                android:numStars="5"
                android:rating="3"
                android:layout_gravity="center_vertical"
                android:clickable="true" />
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="旅行社服务"
                android:textSize="17sp"
                android:gravity="center_vertical|left"                />
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/callback_agency_star"
                style="@style/callbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="10dip"
                android:numStars="5"
                android:rating="3"
                android:layout_gravity="center_vertical"
                android:clickable="true" />
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="旅程整体评价"
                android:textSize="17sp"
                android:gravity="center_vertical|left"
                />
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/callback_all_star"
                style="@style/callbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="10dip"
                android:numStars="5"
                android:rating="3"
                android:layout_gravity="center_vertical"
                android:clickable="true" />
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/callback_tv_111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/callback_ll_stars"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="欢迎您为本次旅程留下感想"/>
    <EditText
        android:id="@+id/callback_content"
        android:layout_below="@+id/callback_tv_111"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_callback_et_bg"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/callback_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交评分与感想"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/callback_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:background="@color/image_color"/>


</RelativeLayout>
