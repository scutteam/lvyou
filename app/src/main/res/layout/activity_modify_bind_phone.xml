<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:context="com.scutteam.lvyou.activity.ModifyUserNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/iv_back"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改绑定手机"
            android:textColor="@color/image_color"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/fragment_user_item_background"
        android:layout_margin="@dimen/layout_margin_normal"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="当前手机号码"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/layout_padding_small"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/layout_padding_small"
                android:maxLength="11"
                android:textSize="18sp"
                android:gravity="left"
                android:id="@+id/tv_phone"
                android:textColor="@color/main_text_color"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="新手机号码"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/layout_padding_small"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/layout_padding_small"
                android:id="@+id/et_phone"
                android:hint="请输入新手机号码"
                android:gravity="right"
                android:inputType="number"
                android:background="@null"
                android:maxLength="11"
                android:textColor="@color/main_text_color"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="短信验证码"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/layout_padding_small"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/layout_padding_small"
                android:id="@+id/et_captcha"
                android:hint="请输入短信验证码"
                android:background="@null"
                android:gravity="right"
                android:maxLength="10"
                android:textColor="@color/main_text_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/layout_margin_normal"
        android:layout_marginRight="@dimen/layout_margin_normal"
        android:text="获取验证码"
        android:textColor="@color/image_color"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/tv_get_captcha"
        android:background="@drawable/fragment_user_item_background"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/layout_margin_normal"
        android:layout_marginLeft="@dimen/layout_margin_normal"
        android:layout_marginRight="@dimen/layout_margin_normal"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/tv_save"
        android:background="@color/image_color"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/layout_margin_normal"
        android:layout_marginLeft="@dimen/layout_margin_normal"
        android:layout_marginRight="@dimen/layout_margin_normal"
        android:text="新手机号将代替旧号码成为新的登录账号,同时也将成为该账号的默认联系方式"
        />
</LinearLayout>
