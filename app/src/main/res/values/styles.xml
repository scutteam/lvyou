<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TextView -->
    <style name="Theme.AppTheme.TextAppearance" parent="android:TextAppearance.Widget.TextView">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="text_bold_black_xlarge_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold_black_large_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold_black_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold_black_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- blackText -->
    <style name="text_black_xlarge_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_black_large_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_black_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_black_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--blue-->
    <style name="text_blue_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/blue_color</item>
    </style>

    <style name="text_blue_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/blue_color</item>
    </style>

    <style name="text_blue_normal_blood_size_style" parent="text_blue_normal_size_style">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- whiteText,shadow -->
    <style name="text_white_small_size_shadow_style" parent="text_white_small_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="text_white_normal_size_shadow_style" parent="text_white_normal_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="text_white_large_size_shadow_style" parent="text_white_large_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="text_white_xlarge_size_shadow_style" parent="text_white_xlarge_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- whiteText,bold,shadow -->
    <style name="text_white_normal_size_bold_shadow_style" parent="text_white_normal_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white_large_size_bold_shadow_style" parent="text_white_large_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white_xlarge_size_bold_shadow_style" parent="text_white_xlarge_size_style">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- whiteText-->
    <style name="text_white_xlarge_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_large_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_tiny_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_xtiny_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_xtiny</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- gray -->
    <style name="text_gray_tiny_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="text_gray_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="text_gray_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="text_gray_large_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="text_gray_xlarge_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="text_hint_tiny_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="text_hint_small_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="text_hint_normal_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="text_hint_large_size_style" parent="Theme.AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="mjRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mj_rating_bar</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>
    
    <!-- ListView -->
    <style name="listview_normal_style" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/normal_button_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/line_height</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="listview_normal_style_with_divider" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/normal_button_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">#dfdfdf</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="listview_normal_style_with_no_divider" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/normal_button_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="base_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->

    </style>

    <style name="circle_progress">
        <item name="android:indeterminateDrawable">@drawable/circle_progress_bar</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>


</resources>
